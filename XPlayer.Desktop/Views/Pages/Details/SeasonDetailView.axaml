<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:XPlayer.Desktop.ViewModels.Pages.Details"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:lang="using:XPlayer.Lang"
             x:Class="XPlayer.Desktop.Views.Pages.Details.SeasonDetailView"
             x:DataType="vm:SeasonDetailViewModel">

    <DockPanel>
        <TextBlock Text="{Binding Season.Name}" FontSize="24" FontWeight="Bold"
                   DockPanel.Dock="Top" Margin="16,8,16,16" />

        <ScrollViewer>
            <StackPanel Spacing="4" Margin="16,0,16,24">
                <ItemsControl ItemsSource="{Binding Episodes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Classes="Flat" Padding="0" Margin="0,0,0,4"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Command="{Binding $parent[ItemsControl].((vm:SeasonDetailViewModel)DataContext).OpenEpisodeCommand}"
                                    CommandParameter="{Binding}">
                                <Border CornerRadius="8" Padding="12"
                                        Background="{DynamicResource SukiCardBackground}">
                                    <DockPanel>
                                        <!-- Play button -->
                                        <Button Classes="Flat" DockPanel.Dock="Right"
                                                Padding="8" VerticalAlignment="Center"
                                                Command="{Binding $parent[ItemsControl].((vm:SeasonDetailViewModel)DataContext).PlayEpisodeCommand}"
                                                CommandParameter="{Binding}">
                                            <avalonia:MaterialIcon Kind="Play" Width="20" Height="20" />
                                        </Button>
                                        <!-- Episode info -->
                                        <StackPanel Spacing="4" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="14" FontWeight="SemiBold" />
                                            </StackPanel>
                                            <TextBlock Text="{Binding Overview}"
                                                       FontSize="12" Opacity="0.6"
                                                       MaxLines="2" TextTrimming="CharacterEllipsis" />
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="{lang:Localize Loading}" IsVisible="{Binding IsLoading}"
                           HorizontalAlignment="Center" Opacity="0.6" Margin="0,16" />
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
